<h1>Lista de usuarios</h1>
<ul>
    {{#each users}}
    <li>
        {{this.first_name}} {{this.last_name}} - {{this.email}}
        <a href="/users/{{this._id}}">Ver</a>
        <form action="/users/{{this._id}}?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit">Eliminar</button>
        </form>
    </li>
    {{/each}}
</ul>
